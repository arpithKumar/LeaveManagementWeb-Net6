@model LeaveTypeVM

@{
    ViewData["Title"] = "Details";
}

<h1>Details of @Model?.Name</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.DefaultDays)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.DefaultDays)
        </dd>
    </dl>
</div>
<br />
<div>
    <a asp-action="Index" class="btn btn-outline-dark"><i class="fa-solid fa-arrow-left-long"></i></a>
    <a asp-action="Edit" class="btn btn-outline-warning" asp-route-id="@Model?.Id"><i class="fa-solid fa-pencil"></i></a>
</div>
